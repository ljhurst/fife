---
import NumberInput from '@/components/molecules/NumberInput/NumberInput.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout>
    <section class="section">
        <div class="container">
            <h1 class="title is-1">Paycheck</h1>
            <div class="content">
                <p>You work hard enough â€” get a little help with your pay.</p>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <div x-data="paychecksRemainingXData()" x-init="methods.init">
                <div class="block">
                    <div class="box">
                        <h2 class="title is-2">Enter Your Paycheck Schedule</h2>

                        <NumberInput
                            label="Paychecks Per Year"
                            addOnIcon="fa-hashtag"
                            xModel="data.paychecksPerYear"
                            onInput="methods.onPaychecksRemainingInput"
                        />
                        <div class="field is-horizontal">
                            <div class="field-label is-normal">
                                <label class="label">Known Paycheck Date</label>
                            </div>
                            <div class="field-body">
                                <div class="field is-narrow">
                                    <div class="field has-addons">
                                        <p class="control">
                                            <a class="button is-static">
                                                <span class="icon is-small is-left">
                                                    <i class="fas fa-calendar-days"></i>
                                                </span>
                                            </a>
                                        </p>
                                        <p class="control is-expanded date-min-width">
                                            <input
                                                class="input has-text-right"
                                                type="date"
                                                x-model="data.knownPaycheckDate"
                                                @input="methods.onPaychecksRemainingInput"
                                            />
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="block" x-cloak x-show="methods.showPaychecksRemaining" x-transition>
                    <div class="box">
                        <h2 class="title is-2">Paychecks Remaining</h2>

                        <NumberInput
                            label="Paychecks Remaining"
                            extraStyle="is-primary"
                            addOnIcon="fa-hashtag"
                            addOnStatic="false"
                            value="data.paychecksRemaining"
                            readonly="true"
                        />
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .date-min-width {
        min-width: 200px;
    }
</style>

<script src="./_paycheck.client.ts"></script>
